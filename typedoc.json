{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": [
    "apps/backend/src/main.ts",
    "apps/cli/src/index.ts"
  ],
  "out": "docs",
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.next/**"
  ],
  "excludePrivate": true,
  "excludeProtected": false,
  "excludeInternal": false,
  "readme": "README.md",
  "name": "Brebaje Documentation",
  "includeVersion": true,
  "plugin": [
    "typedoc-plugin-missing-exports"
  ],
  "tsconfig": "apps/backend/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true
  },
  "navigation": {
    "includeCategories": true,
    "includeGroups": true
  },
  "categorizeByGroup": true,
  "searchInComments": true,
  "validation": {
    "invalidLink": true,
    "notDocumented": true
  }
}

