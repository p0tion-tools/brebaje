{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": [
    "apps/backend/src/**/*.module.ts",
    "apps/backend/src/**/*.controller.ts",
    "apps/backend/src/**/*.service.ts",
    "apps/backend/src/**/*.model.ts",
    "apps/backend/src/**/*.dto.ts",
    "apps/backend/src/**/*.guard.ts",
    "apps/backend/src/utils/**/*.ts",
    "apps/backend/src/types/**/*.ts"
  ],
  "out": "docs/api",
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.next/**"
  ],
  "excludePrivate": true,
  "excludeProtected": false,
  "excludeInternal": false,
  "readme": "none",
  "name": "Brebaje Backend API",
  "includeVersion": true,
  "plugin": [
    "typedoc-plugin-markdown",
    "typedoc-plugin-missing-exports"
  ],
  "tsconfig": "apps/backend/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true
  },
  "navigation": {
    "includeCategories": true,
    "includeGroups": true
  },
  "categorizeByGroup": true,
  "searchInComments": true,
  "validation": {
    "invalidLink": true,
    "notDocumented": true
  },
  "markdown": {
    "hidePageHeader": true,
    "hideBreadcrumbs": false,
    "hidePageTitle": false,
    "indexFormat": "table",
    "entryFileName": "index.md",
    "readmeFile": false
  }
}

